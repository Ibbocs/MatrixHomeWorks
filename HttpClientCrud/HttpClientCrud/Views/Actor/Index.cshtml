@model List<Actor>

@{
}
<html>
<head>
    <title>TABLO</title>
    @*<link href="c:\users\user\source\repos\matrixhomeworks\httpclientcrud\httpclientcrud\wwwroot\css\actorindex.css" rel="stylesheet" />*@
    <style>
        #actor {
            border-collapse: collapse;
            width: 100%;
        }

            #actor td, #actor th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #actor tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #actor tr:hover {
                background-color: blueviolet;
                color: #fff;
            }

            #actor th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: center;
                background-color: #2c3e50;
                color: white;
            }

        .center {
           text-align:center;
        }
        #margin{
            margin-bottom: 20px;
            margin-top : 10px;
        }
    </style>
</head>
<body>
    <div class="center">
        <h1>Actor Table</h1>
        <a asp-action="Add" style="position:relative; margin-bottom: 10px; margin-top: 10px;">Create New Actor</a>
    </div>
    <div>
        <table id="actor">
            <thead>
                <tr>
                    <th>Actor Id</th>
                    <th>Actor Name</th>
                    <th>Operations</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ActorID</td>
                        <td>@item.ActorName</td>
                        <td>
                            <a asp-action="Update" asp-controller="Actor" asp-route-ActorID="@item.ActorID">Update</a>
                            <a asp-action="Delete" asp-controller="Actor" asp-route-ActorID="@item.ActorID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
